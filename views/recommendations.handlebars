
<!-- Restaurants -->
<div class="blue lighten-5">
  <div class="icon-top center"><a class="btn-floating btn-large waves-effect waves-light green darken-1"><i class="fa fa-cutlery"></i></a></div>
  <div class="row">
    
    {{#each restaurants}}
      <div class="col l3">
        <div class="card">
          <div class="card-image">
            {{#equal this.details.name "KFC"}}
              <img src="../assets/images/kfc.jpg">
            {{/equal}}
            {{#equal this.details.name "McDonalds"}}
              <img src="../assets/images/mcdonalds.jpg">
            {{/equal}}
            {{#equal this.details.name "Jags"}}
              <img src="../assets/images/jags.jpg">
            {{/equal}}
            {{#equal this.details.name "Denny's"}}
              <img src="../assets/images/dennys.jpg">
            {{/equal}}
            {{#equal this.details.name "Burger King"}}
              <img src="../assets/images/bking.jpg">
            {{/equal}}
            {{#equal this.details.name "Mumbai Spice"}}
              <img src="../assets/images/curry.jpg">
            {{/equal}}
            {{#equal this.details.name "Nandos"}}
              <img src="../assets/images/nandos.jpg">
            {{/equal}}
            {{#equal this.details.name "Joe's Pizza"}}
              <img src="../assets/images/pizza.jpg">
            {{/equal}}
            {{#equal this.details.name "Magic Wok"}}
              <img src="../assets/images/wok.jpg">
            {{/equal}}
            {{#equal this.details.name "Crab Shack"}}
              <img src="../assets/images/crab_shack.jpg">
            {{/equal}}
            {{#equal this.details.name "Del Taco"}}
              <img src="../assets/images/deltaco.jpg">
            {{/equal}}
            {{#equal this.details.name "Tuna Time"}}
              <img src="../assets/images/tuna.jpg">
            {{/equal}}
            {{#equal this.details.name "Rubios"}}
              <img src="../assets/images/rubios.jpg">
            {{/equal}}
            <span class="card-title">{{{this.details.name}}}</span>
          </div>
          <div class="card-content">
            {{#if (and (mte this.details.avg_rating 1) (lt this.details.avg_rating 1.5)
            )}}
              <i class="fa fa-star rating"></i>
            {{/if}}
            {{#if (and (mte this.details.avg_rating 1.5) (lt this.details.avg_rating 2)
            )}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star-half-o rating"></i>
            {{/if}}
            {{#if (and (mte this.details.avg_rating 2) (lt this.details.avg_rating 2.5)
            )}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
            {{/if}}
            {{#if (and (mte this.details.avg_rating 2.5) (lt this.details.avg_rating 3)
            )}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star-half-o rating"></i>
            {{/if}}
            {{#if (and (mte this.details.avg_rating 3) (lt this.details.avg_rating 3.5)
            )}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
            {{/if}}
            {{#if (and (mte this.details.avg_rating 3.5) (lt this.details.avg_rating 4)
            )}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star-half-o rating"></i>
            {{/if}}
            {{#if (and (mte this.details.avg_rating 4) (lt this.details.avg_rating 4.5)
            )}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
            {{/if}}
            {{#if (and (mte this.details.avg_rating 4.5) (lt this.details.avg_rating 5)
            )}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star-half-o rating"></i>
            {{/if}}
            {{#equal this.details.avg_rating "5"}}
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
              <i class="fa fa-star rating"></i>
            {{/equal}}
          </div>
          <div class="card-action">
            <a href="#">Website</a>
          </div>  
        </div>
      </div>

    {{/each}}
  </div>
</div>
